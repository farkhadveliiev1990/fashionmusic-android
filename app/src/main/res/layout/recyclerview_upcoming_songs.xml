<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/transparencystripe"
        >

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            style="@style/CustomTextAppearance.Regular"
            />

        <ImageView
            android:id="@+id/img_artist"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_launcher"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/ll_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_artist"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/txt_next"
            android:layout_marginRight="@dimen/_3sdp"
            >

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muzică, nu zgomot"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_9sdp"
            android:padding="@dimen/_1sdp"
            android:singleLine="true"
            style="@style/CustomTextAppearance.Regular"
            />

        </LinearLayout>

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:id="@+id/txt_song_name"
            android:layout_toRightOf="@+id/img_artist"
            android:layout_below="@+id/ll_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muzică, nu zgomot"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_1sdp"
            android:singleLine="true"
            style="@style/CustomTextAppearance.Regular"
            />

        <TextView
            android:id="@+id/txt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URMEAZĂ"
            android:textColor="@color/white"
            android:background="#9c9c9c"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            style="@style/CustomTextAppearance.Regular"
            />

    </RelativeLayout>

</LinearLayout>
