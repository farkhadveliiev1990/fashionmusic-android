<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:clickable="false"
    android:visibility="visible"


    android:background="@drawable/deals_rectangle_bg"

    >

    <RelativeLayout

        android:id="@+id/rl_main"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_200sdp"
        android:orientation="horizontal"
        >


       <!-- <ImageView
            android:id="@+id/img_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noti_image"
            android:scaleType="centerCrop"
            />-->

        <com.joooonho.SelectableRoundedImageView

            android:id="@+id/img_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/noti_image"

            app:sriv_border_width="0dip"
            app:sriv_left_bottom_corner_radius="10dip"
            app:sriv_left_top_corner_radius="10dip"
            app:sriv_right_bottom_corner_radius="10dip"
            app:sriv_right_top_corner_radius="10dip" />

        <TextView
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="@dimen/_3sdp"

            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_8sdp"

            android:text="3 days ago"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_above="@+id/tv_title"
            android:visibility="gone"

            style="@style/CustomTextAppearance.Semibold"

            />

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/play_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_30sdp"

            android:text="Lorem ipsum dolor sit shb jhs jhs hj sj sjh js h amet, consectetuer adipis..."
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"


            android:maxLines="2"
            android:ellipsize="end"
            style="@style/CustomTextAppearance.Regular"
            />


    </RelativeLayout>

</RelativeLayout>
